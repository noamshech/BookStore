@model IEnumerable<BookPlace.ViewModel.ThumbnailBoxViewModel>

@{
    ViewBag.Title = "";
}
    <style>
        body {
            background-image: url("https://i.kinja-img.com/gawker-media/image/upload/z9tjjkr73drvwb94ffnp.jpg");
            background-size:contain;
        }
