        <div id="show_weather" style="display: none;">
            <!-- Text -->
            <p class="card-text text-center"><span id="weather_date" title="The date that the weather was taken">Mon, 12:30 PM</span>, <span id="weather_desc">Mostly Sunny</span></p>
            <div class="d-flex justify-content-between">
                <h1 class="display-1 degree text-center"><span id="deg1">23</span>&deg;</h1>
            </div>
            <div class="d-flex justify-content-between mb-4 text-center">
                <p>💧 <span id="weather_humidity">3</span>% Humidity</p>
                <p>💨 <span id="weather_winds"></span> hm/h Winds</p>
            </div>
            <div class="progress md-progress">
                @{
                    var date = DateTime.Now.Hour;
                    var percent = (double)date / (double)24 * (double)100;
                }
                <div class="progress-bar black" role="progressbar" style="width: @percent%" aria-valuenow="@((int)(percent))" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <ul class="list-unstyled  justify-content-between mb-4">
                <h4 class="text-left">12AM</h4>
                <h4 class="text-center">12PM</h4>
                <h4 class="text-right">24PM</h4>
            </ul>
