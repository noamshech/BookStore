@model IEnumerable<BookPlace.Models.MembershipType>
@using BookPlace.Models
@using BookPlace.Utility
@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "MembershipType", FormMethod.Get))
{

    <h3>Membership Types</h3>

    <p>
        @Html.Partial("_CreateButtonPartial")
    </p>
    <form method="get" action="MembershipType">
        Search by Membership Type: <input type="text" name="searchText" />
        <input type="submit" value="Filter" />

    </form>
    <table class="table table-condensed table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { GenreId = item.Id })

                </td>
            </tr>
        }

    </table>
}