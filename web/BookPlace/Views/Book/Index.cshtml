@model IEnumerable<BookPlace.Models.Book>
@using BookPlace.Models
@{
    ViewBag.Title = "Index";
}

<h3>Manage Books</h3>
<br />
<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<form method="get" action="Book">
    Search by Book Title: <input type="text" name="searchText" />
    <input type="submit" value="Filter" />
</form>
<br />
<table class="table table-condensed table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        *@
        <th>
            @Html.DisplayNameFor(model => model.Avaibility)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Languague)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author)
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
    *@
    <td>
        @Html.DisplayFor(modelItem => item.Avaibility)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Languague)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre.Name)
    </td>
    <td>
        @Html.Partial("_TableButtonPartial", new IndividualButtonPartial { BookId = item.Id })
    </td>
</tr>
}

</table>
